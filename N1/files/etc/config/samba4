
config samba
	option workgroup 'WORKGROUP1'
	option charset 'UTF-8'
	option description 'Samba on OpenWRT'
	option enable_extra_tuning '1'

config sambashare
	option name 'fff'
	option path '/mnt/sda1'
	option read_only 'no'
	option guest_ok 'no'
	option create_mask '0666'
	option dir_mask '0777'
	option users 'root'

